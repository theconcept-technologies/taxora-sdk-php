<?xml version="1.0" encoding="UTF-8"?>
<psalm
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="https://getpsalm.org/schema/config"
        xsi:schemaLocation="https://getpsalm.org/schema/config vendor/vimeo/psalm/config.xsd"
        errorLevel="2"
        resolveFromConfigFile="true"
        cacheDirectory=".psalm-cache"
        phpVersion="8.3"
        findUnusedCode="true"
        findUnusedVariablesAndParams="true"
        findUnusedPsalmSuppress="true"
>
    <projectFiles>
        <directory name="src"/>
        <ignoreFiles>
            <directory name="vendor"/>
            <directory name="resources"/>
            <directory name=".github"/>
            <directory name="tests/Fixtures"/>
        </ignoreFiles>
    </projectFiles>

    <issueHandlers>
        <MixedAssignment errorLevel="info"/>
        <MixedArgument errorLevel="info"/>
        <MixedReturnStatement errorLevel="info"/>

        <MissingParamType errorLevel="error"/>
        <MissingReturnType errorLevel="error"/>
        <PropertyNotSetInConstructor errorLevel="error"/>

        <PossiblyNullReference errorLevel="error"/>
        <InvalidScalarArgument errorLevel="error"/>
        <RedundantCondition errorLevel="info"/>
        <PossiblyUnusedMethod errorLevel="info"/>
        <UnusedClass errorLevel="info"/>
        <UnusedMethod errorLevel="info"/>
        <UnusedVariable errorLevel="info"/>
        <DocblockTypeContradiction errorLevel="info"/>
        <MissingOverrideAttribute errorLevel="info"/>
        <PossiblyUnusedProperty errorLevel="info"/>
    </issueHandlers>
</psalm>